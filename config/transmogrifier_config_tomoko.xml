<?xml version="1.0"?>

<transmogrifierConfiguration xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                     xsi:noNamespaceSchemaLocation="transmogrifier_config.xsd">

    <global minimumVersion="3.1.0"/>

    <project name="Tomoko: Copy Pipeline Files to Mac Desktop" default="true"
             taskName="rename-without-delete"
             copyPreviousButtonVisible="false">

        <inputFileFilter patternString=".+\..+"
                         recursiveSearch="true"/>

        <inputFileSorter sortAlgorithm="Path"/>

        <outputDirectory fileModeReadOnly="false">
            <path path="/Users/oyamat/Desktop/copied-share-data/" />
            <renameFieldValue fieldDisplayName="Relative Path"/>
        </outputDirectory>

        <fileTransfer bufferSize="10000000"
                      digestAlgorithm="adler32"
                      validationRequired="false"/>

        <plugins>
        </plugins>

        <dataFields>
            <text displayName="Relative Path" required="true"
                  markedForTask="false">
                <sourceFileDefault pattern="/Volumes/zlaticlab/pipeline/(.*)/[^/]+\.[^/]+" matchType="path"/>
                <sourceFileDefault pattern="/groups/zlatic/zlaticlab/pipeline/(.*)/[^/]+\.[^/]+" matchType="path"/>
            </text>

            <fileName displayName="File Name" visible="false"/>

        </dataFields>

    </project>

</transmogrifierConfiguration>
