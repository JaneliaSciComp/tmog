@config-fragment-tmog-begin@
@config-fragment-global@
    <project name="Fly Light Polarity - scope to confocalStacks" default="true">

@config-fragment-lsm-input@
@config-fragment-lsm-sort@
@config-fragment-output-polarity@
        <plugins>

@config-fragment-update-mapped-serial-data@
@config-fragment-update-project-cross-data@
@config-fragment-update-zeiss-lsm-data@
@config-fragment-correct-objective@
@config-fragment-validate-common-fields@
@config-fragment-image-sequence-polarity@
            <rowListener className="org.janelia.it.ims.tmog.plugin.imagedb.ImageDataPlugin">
@config-fragment-common-image-data-properties@
                <property name="display" value="Screen State$MAP:accepted=true|accepted_public=true|pre_screen=false|rejected=false"/>
                <property name="family" value="$STATIC:flylight_polarity"/>
                <property name="screen_state" value="Screen State"/>
            </rowListener>

            <rowListener className="org.janelia.it.ims.tmog.plugin.imagedb.SageLoaderPlugin">
                <property name="serviceUrl" value="http://jacs.int.janelia.org:8180/rest-v1/sageLoader"/>
                <property name="owner" value="system"/>
                <property name="config" value="/groups/scicomp/informatics/data/flylightflip_light_imagery-config.xml"/>
                <property name="grammar" value="/usr/local/pipeline/grammar/flylightpolarity.gra"/>
                <property name="lab" value="flylight"/>
                <property name="debug" value="true"/>
                <property name="testUrl" value="http://jacs.int.janelia.org:8180/rest-v1/task/1593757153544372426/currentStatus"/>
            </rowListener>

@config-fragment-copy-zeiss-log-files@
        </plugins>

        <dataFields>

            <separator value="FLPO_"/>
@config-fragment-file-name-suffix@
@config-fragment-data_set@
@config-fragment-tile@
@config-fragment-slide_code@
@config-fragment-cross_barcode@
@config-fragment-line@
@config-fragment-effector@
@config-fragment-gender@
@config-fragment-age@
@config-fragment-full_age@
@config-fragment-imager@
@config-fragment-annotator@
@config-fragment-tissue_mounting_protocol@
@config-fragment-screen_state@
@config-fragment-imaging_project-polarity@
@config-fragment-objective@
@config-fragment-channel-data@
        </dataFields>

    </project>

    <project name="Fly Light Polarity - fix data" taskName="collector">

        <inputFileFilter patternString=".+\.lsm"/>

@config-fragment-lsm-sort@
        <plugins>

@config-fragment-update-mapped-serial-data@
@config-fragment-update-project-cross-data@
@config-fragment-image-path-exists@
            <rowListener className="org.janelia.it.ims.tmog.plugin.imagedb.ImageDataPlugin">
@config-fragment-common-image-data-properties@
                <property name="comment" value="Comment"/>
                <property name="display" value="Screen State$MAP:accepted=true|accepted_public=true|pre_screen=false|rejected=false"/>
                <property name="exclude.host.name" value="true"/>
                <property name="family" value="$STATIC:flylight_polarity"/>
                <property name="keep.existing.data" value="true"/>
                <property name="relative_path" value="SAGE Name"/>
                <property name="screen_state" value="Screen State"/>
            </rowListener>

        </plugins>

        <dataFields>

@config-fragment-data_set-with-flylight_polarity-default@
@config-fragment-cross_barcode-with-flylight_polarity-default@
@config-fragment-line-with-flylight_polarity-default@
@config-fragment-effector-with-flylight_polarity-default@
@config-fragment-slide_code-with-flylight_polarity-default@
@config-fragment-tile-with-flylight_polarity-default@
@config-fragment-screen_state-with-flylight_polarity-default@
@config-fragment-comment-with-flylight_polarity-default@
@config-fragment-gender-with-flylight_polarity-default@
@config-fragment-name-with-flylight_polarity-default@
        </dataFields>

    </project>

    <project name="Fly Light Polarity - promote preScreen to confocalStacks">

        <inputFileSorter sortAlgorithm="Number"
                         patternString=".*_(\d{8}_\d\d_[A-Z]\d).*_R._L(\d++)_(.*)"
                         patternGroupIndexes="1,2,3" />

@config-fragment-output-polarity@
        <plugins>

            <rowUpdater className="org.janelia.it.ims.tmog.plugin.dataFile.TileSetterPlugin">
            </rowUpdater>

@config-fragment-update-mapped-serial-data@
@config-fragment-update-project-cross-data@
@config-fragment-update-zeiss-lsm-data@
@config-fragment-correct-objective@
@config-fragment-validate-common-fields@
@config-fragment-image-sequence-polarity@
            <rowListener className="org.janelia.it.ims.tmog.plugin.imagedb.ImageDataPlugin">
@config-fragment-common-image-data-properties@
                <property name="exclude.host.name" value="true"/>
                <property name="family" value="$STATIC:flylight_polarity"/>
                <property name="screen_state" value="$STATIC:accepted"/>
            </rowListener>

@config-fragment-copy-zeiss-log-files@
        </plugins>

        <dataFields>

            <separator value="FLPO_"/>
@config-fragment-hidden-file-name-suffix@
@config-fragment-data_set@
            <number displayName="Cross Serial Number"
                    minimumValue="1"
                    maximumValue="99999"
                    markedForTask="false">
                <sourceFileDefault pattern=".*(\d{5})_\d{8}_\d{2}_.*" />
            </number>

@config-fragment-line@
@config-fragment-effector@
            <text displayName="Slide Code" required="true"
                  pattern="\d{8}_\d+_[A-Z]\d+"
                  copyable="false"
                  markedForTask="false">
                <sourceFileDefault pattern=".*_(\d{8}_\d+_[A-Z]\d+).*"/>
                <sourceFileDefault pattern=".*_(\d{8}_\d+_).*"/> <!-- for preScreen prior to zeiss brain number standardization -->
            </text>

            <cvTermList displayName="Tile" required="true"
                        serviceUrl="http://sage.int.janelia.org/sage-ws/cvs/fly_light_adult_tiles"
                        autoComplete="true"
                        markedForTask="false">
            </cvTermList>

@config-fragment-gender@
@config-fragment-age@
@config-fragment-imager@
@config-fragment-annotator@
@config-fragment-tissue_mounting_protocol@
@config-fragment-imaging_project-polarity@
@config-fragment-objective@
@config-fragment-channel-data@
        </dataFields>

    </project>

@config-fragment-tmog-end@