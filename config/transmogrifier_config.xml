<transmogrifierConfiguration xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                     xsi:noNamespaceSchemaLocation="transmogrifier_config.xsd">

    <global minimumVersion="2.4.0"/>

    <project name="NIO Without Validation" default="true" taskName="rename-without-delete">

        <inputFileFilter patternString=".+\.(lsm|seq|png|blob|summary)"
                         recursiveSearch="true"/>

        <inputFileSorter sortAlgorithm="Path"/>

        <outputDirectory fileModeReadOnly="false">
            <path path="/opt/wdbp/b"/>
        </outputDirectory>

        <fileTransfer nioRequired="true" validationRequired="false"/>
        
        <plugins>
        </plugins>

        <dataFields>
            <separator value="xfer_"/>

            <text displayName="Name">
                <sourceFileDefault pattern="(.*)"/>
            </text>
        </dataFields>

    </project>

