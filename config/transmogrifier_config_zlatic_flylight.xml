<?xml version="1.0"?>

<transmogrifierConfiguration xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                     xsi:noNamespaceSchemaLocation="transmogrifier_config.xsd">

    <global minimumVersion="2.6.0"/>

    <project name="Zlatic Lab: Peripheral Images" default="true">

        <inputFileSorter sortAlgorithm="LNumber" />

        <outputDirectory fileModeReadOnly="false">
            <path path="\\dm11.isi.janelia.org\zlaticimg\peripheralConfocalStacks\" />
            <renameFieldValue fieldDisplayName="Line"/>
        </outputDirectory>

        <plugins>

            <rowValidator className="org.janelia.it.chacrm.ChacrmLineValidator">
                <property name="linePropertyName" value="Line"/>
            </rowValidator>

            <rowListener className="org.janelia.it.ims.tmog.plugin.imagedb.ImageDataPlugin">
                <property name="db.config.key" value="nighthawk"/>
                <property name="line" value="Line"/>
                <property name="gender" value="Gender"/>
                <property name="age" value="Age"/>
                <property name="area" value="Area$MAP:F=Fillet"/>
                <property name="uas_reporter" value="UAS Reporter"/>
                <property name="family" value="$STATIC:zlatic_peripheral"/>
            </rowListener>

            <rowListener className="org.janelia.it.ims.tmog.plugin.imagedb.ImageDataPlugin">
                <property name="db.config.key" value="sage"/>
                <property name="lab" value="Line Lab"/>
                <property name="line" value="Line"/>
                <property name="gender" value="Gender"/>
                <property name="age" value="Age"/>
                <property name="area" value="Area$MAP:F=Fillet"/>
                <property name="effector" value="UAS Reporter"/>
                <property name="family" value="$STATIC:zlatic_peripheral"/>
            </rowListener>

        </plugins>

        <dataFields>
            <text displayName="Line" required="true"
                  pattern="[0-9A-Za-z\-\_]++">
            </text>

            <separator value="_zp"/>

            <number displayName="Image Number" required="true"
                    copyable="false" minimumValue="1"
                    padFormat="30">
                <sourceFileDefault pattern=".*Sum(\d+)\.lsm"/>
            </number>

            <separator value="_"/>

            <validValueList displayName="File Type" required="true">
                <sourceFileDefault pattern="^(....??)_..*"/>
                <validValue value="All" />
                <validValue value="Tile"/>
            </validValueList>

            <separator value="_"/>

            <runTime datePattern="yyyyMMddHHmmssSSS"/>

            <separator value=".lsm"/>

            <!--
             These values are collected for the nighthawk database but are not
             included as components of the file name (markedForTask="false").
             -->
            <validValueList displayName="Gender" required="true"
                            markedForTask="false">
                <validValue displayName="m: Male" value="m"/>
                <validValue displayName="f: Female" value="f"/>
                <validValue displayName="x: Not Defined" value="x" default="true"/>
            </validValueList>

            <validValueList displayName="Age" required="true"
                            markedForTask="false">
                <validValue displayName="L01: First Instar" value="L01"/>
                <validValue displayName="L02: Second Instar" value="L02"/>
                <validValue displayName="L03: Third Instar" value="L03" default="true"/>
            </validValueList>

            <validValueList displayName="Area" required="true"
                            markedForTask="false">
                <validValue displayName="F: Fillet" value="F" default="true"/>
            </validValueList>

            <validValueList displayName="UAS Reporter" required="true"
                            markedForTask="false">
                <validValue value="UAS_IVS_myr_3_0009" default="true"/>
            </validValueList>

            <cvTermList displayName="Line Lab" required="true"
                        serviceUrl="http://sage.int.janelia.org/sage-ws/cvs/lab"
                        displayNamePrefixedForValues="true"
                        markedForTask="false">
                <staticDefault value="rubin"/>                
            </cvTermList>

        </dataFields>

    </project>

</transmogrifierConfiguration>
