<?xml version="1.0"?>

<transmogrifierConfiguration xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                     xsi:noNamespaceSchemaLocation="transmogrifier_config.xsd">

    <global minimumVersion="2.4.7"/>

    <project name="Simpson Lab: GAL4 Lines" default="true">

        <inputFileSorter sortAlgorithm="LNumber" />

        <outputDirectory>
            <path path="\\dm10.isln.janelia.org\simpsonimg\GAL4_confocal_stacks\" />
            <renameFieldValue fieldDisplayName="Line" />
            <renameFieldValue fieldDisplayName="Insertion Number" prefix="_" />
            <path path="-GAL4" />
        </outputDirectory>

        <plugins>
            <rowListener className="org.janelia.it.ims.tmog.plugin.imagedb.ImageSequencePlugin">
                <property name="db.config.key" value="nighthawk" />
                <property name="Specimen Number" value="urn:lsid:janelia.org:simpson_lab_line_specimen:${Line}${'_'Insertion Number}" />
            </rowListener>
            <rowListener className="org.janelia.it.ims.tmog.plugin.imagedb.ImageDataPlugin">
                <property name="db.config.key" value="nighthawk"/>
                <property name="family" value="$STATIC:GAL4"/>
                <property name="line" value="Line"/>
                <property name="uas_reporter" value="UAS Reporter"/>
                <property name="landing_site" value="Landing Site"/>
            </rowListener>

            <sessionListener className="org.janelia.it.ims.tmog.plugin.SessionSummaryFileWriter">
                <property name="directory" value="\\dm10.isln.janelia.org\simpsonimg\tmog\summaries\GAL4"/>
            </sessionListener>
        </plugins>

        <dataFields>
            <text displayName="Line" required="true" pattern="[0-9A-Za-z_]++">
                <sourceFileDefault pattern="([0-9A-Za-z]++)-?.*-Gal4-.*\.lsm"/>
                <sourceFileDefault pattern=".*[/\\\\]([0-9A-Za-z]++)-?.*-Gal4-.*\.lsm"
                                   matchType="path"/>
            </text>
            <text displayName="Insertion Number" required="false"
                  pattern="[0-9A-Za-z\\-]++" prefix="_">
                <sourceFileDefault pattern="[0-9A-Za-z]++-(.*)-Gal4-.*\.lsm"/>
                <sourceFileDefault pattern=".*mdb[/\\\\].*Gal4-(.*)-UAS.*mdb[/\\\\].*\.lsm"
                                   matchType="path"/>
            </text>
            <separator value="-"/>
            <separator name="Family" value="GAL4"/>
            <separator value="_"/>
            <date displayName="Capture Date" required="true"
                  datePattern="yyyyMMdd" suffix="_">
                <sourceFileDateDefault pattern=".*[-/\\\\](\d\d?-\d\d?-\d\d){1}.*\.lsm"
                                       fromDatePattern="MM-dd-yy"
                                       toDatePattern="yyyyMMdd"
                                       matchType="path"/>
            </date>
            <validValueList displayName="Organ" required="true">
                <validValue displayName="B: Brain" value="B"/>
                <validValue displayName="L: Larva" value="L"/>
                <validValue displayName="T: Thorax" value="T"/>
            </validValueList>
            <pluginData displayName="Specimen Number" format="%02d"/>
            <runTime datePattern="'_'yyyyMMddHHmmssSSS"/>
            <separator value=".lsm"/>

            <!--
             These values are collected for the database but are not
             included as components of the file name (markedForTask="false").
             -->
            <validValueList displayName="UAS Reporter" required="true"
                            markedForTask="false">
                <validValue value="UAS_mCD8_2_0006" default="true"/>
                <validValue value="UAS_IVS-mCD8_3_0007"/>
            </validValueList>

            <cvTermList displayName="Landing Site" required="false"
                        markedForTask="false"
                        serviceUrl="http://sage.int.janelia.org/sage-ws/cvs/rubin_crm_landing_site"
                        displayNamePrefixedForValues="true">
            </cvTermList>

        </dataFields>

    </project>

</transmogrifierConfiguration>