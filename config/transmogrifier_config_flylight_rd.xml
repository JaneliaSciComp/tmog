<?xml version="1.0"?>

<transmogrifierConfiguration xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                     xsi:noNamespaceSchemaLocation="transmogrifier_config.xsd">

    <global minimumVersion="2.4.6"/>

    <project name="Fly Light: Research and Development (RDFL_*)" default="true">

        <inputFileSorter sortAlgorithm="LNumber" />

        <outputDirectory basePath="[\\dm10.janelia.priv|/groups/flylight]/flylight/rd/confocalStacks"
                         derivedFromEarliestModifiedFile="true"/>

        <plugins>
            <rowListener className="org.janelia.it.ims.tmog.plugin.imagedb.ImageDataPlugin">
                <property name="db.config.key" value="sage"/>
                <property name="promoter" value="Promoter"/>
                <property name="transcript" value="Transcript"/>
                <property name="responder" value="Responder"/>
                <property name="created_by" value="Created By"/>
                <property name="capture_date" value="Capture Date"/>
                <property name="area" value="Area$MAP:b=Brain|v=Ventral Nerve Cord|c=Central Complex"/>
                <property name="l_number" value="L-Number"/>
                <property name="comment" value="Comment"/>
                <property name="mounting_protocol" value="Tissue Mounting Protocol"/>
                <property name="family" value="$STATIC:flylight_rd"/>
                <property name="line" value="$STATIC:Not_Applicable"/>
                <property name="lab" value="$STATIC:none"/>
                <property name="base_url" value="$STATIC:http://img.int.janelia.org/rubin-image/flylight_rd-confocal-data/"/>
                <property name="base_path" value="$STATIC:/groups/rubin/data1/rubinlab/FlyLight/confocalStacks/"/>
            </rowListener>
            <sessionListener className="org.janelia.it.ims.tmog.plugin.SessionSummaryFileWriter">
                <property name="directory" value="[\\dm10.janelia.priv|/groups/flylight]/flylight/tmog/summaries/rd"/>
            </sessionListener>
        </plugins>

        <dataFields>
            <separator value="RDFL_"/>
            <text displayName="Promoter" required="true"
                  pattern="[0-9A-Za-z\\-]++"/>
            <separator value="_"/>
            <text displayName="Transcript" required="true"
                  pattern="[0-9A-Za-z\\-]++"/>
            <separator value="_"/>
            <text displayName="Responder" required="true"
                  pattern="[0-9A-Za-z\\-]++"/>
            <separator value="_"/>
            <validValueList displayName="Created By" required="true">
                <validValue displayName="Aljoscha Nern" value="nerna"/>
                <validValue displayName="Chris Zugates" value="zugatesc"/>
                <validValue displayName="Jennifer Jeter" value="jeterj"/>
                <validValue displayName="Teri Ngo" value="ngot"/>
                <validValue displayName="Tyler Ofstad" value="ofstadt"/>
            </validValueList>
            <date displayName="Capture Date" required="true"
                  datePattern="yyMMdd" prefix="_" copyable="false">
                <sourceFileDateDefault pattern=".*(\d\d\d\d\d\d)_L[0-9]++_Sum\.lsm"
                                       fromDatePattern="MMddyy"
                                       toDatePattern="yyMMdd"/>
                <sourceFileDateDefault pattern=".*_(\d\d\d\d\d\d)_R.*\.lsm"
                                       fromDatePattern="MMddyy"
                                       toDatePattern="yyMMdd"/>
            </date>
            <validValueList displayName="Area" required="true" prefix="-">
                <validValue displayName="b: Brain" value="b"/>
                <validValue displayName="v: Ventral Nerve Cord" value="v"/>
                <validValue displayName="c: Central Complex" value="c"/>
            </validValueList>
            <text displayName="L-Number" required="false" prefix="-L"
                  pattern="[0-9]++" copyable="false">
                <sourceFileDefault pattern=".*_L([0-9]++)_Sum\.lsm"/>
                <sourceFileDefault pattern=".*_L([0-9]++)\.lsm"/>
            </text>
            <text displayName="Comment" required="false" prefix="-"
                  pattern="[0-9A-Za-z\\-]++"/>
            <separator value="_"/>
            <runTime datePattern="yyyyMMddHHmmssSSS"/>
            <separator value=".lsm"/>
            <validValueList displayName="Tissue Mounting Protocol" required="true"
                            markedForTask="false">
                <validValue value="Glycerol-Based Mounting" default="true"/>
                <validValue value="DPX Mounting"/>
            </validValueList>
        </dataFields>

    </project>

</transmogrifierConfiguration>