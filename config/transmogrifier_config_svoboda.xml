<?xml version="1.0"?>

<transmogrifierConfiguration xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                     xsi:noNamespaceSchemaLocation="transmogrifier_config.xsd">

    <!-- frameSizePercentage default is 80, min is 40, and max is 99 --> 
    <global minimumVersion="2.2.9"
            frameSizePercentage="95"/>

    <!-- replace "trautmane-ws:8080" with "wormtracker.int.janelia.org" for production  -->
    <project name="Svoboda Lab: Anatomy Project" taskName="collector" default="true">

        <inputFileFilter patternString=".+\.(tiff|jpg|lsm)"
                         recursiveSearch="true"/>

        <plugins>
            <rowListener className="org.janelia.it.ims.tmog.plugin.XmlWriterPlugin" >
                <property name="directory" value="/Users/trautmane/Desktop/svoboda"/>
            </rowListener>
        </plugins>

        <dataFields>

            <targetName displayName="Source File"/>

            <validValueList displayName="Project" required="true">
                <validValue displayName="Project A" value="A"/>
                <validValue displayName="Project B" value="B"/>
            </validValueList>

            <fileName displayName="Source File Format"
                      patternString=".+\.(.+)"
                      patternGroupNumber="1"
                      visible="true" />

            <fileName displayName="File Base Name"
                      patternString="(.+)\..+"
                      patternGroupNumber="1"
                      visible="true" />

            <number displayName="First File Number" required="true" minimumValue="0"/>

            <number displayName="Last File Number" required="true" minimumValue="0"/>

            <validValueList displayName="Compression" required="true">
                <validValue value="LZW"/>
                <validValue value="RLE"/>
                <validValue value="DPCM"/>
            </validValueList>

            <validValueList displayName="Imager" required="true">
                <validValue displayName="Matt Hooks" value="hooksm"/>
            </validValueList>

            <validValueList displayName="Microscope" required="true">
                <validValue value="Nanozoomer"/>
            </validValueList>

        </dataFields>

    </project>

</transmogrifierConfiguration>