<?xml version="1.0"?>

<transmogrifierConfiguration xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                     xsi:noNamespaceSchemaLocation="transmogrifier_config.xsd">

    <global minimumVersion="2.2.2"/>

    <project name="Kerr Lab: Multi-Worm Tracker" taskName="collector" default="true">

        <inputFileFilter patternString="(\d\d\d\d\d\d\d\d_\d\d\d\d\d\d){1}"
                         excludeQueryUrl="http://val1.int.janelia.org:8080/wormTracker/experiment"
                         recursiveSearch="true"/>
        
        <plugins>
            <rowListener className="org.janelia.it.ims.tmog.plugin.RestDataPlugin">
                <property name="dataServerUrl" value="http://val1.int.janelia.org:8080/wormTracker/experiment"/>
                <property name="resourceField" value="Experiment Timestamp"/>
            </rowListener>
        </plugins>

        <dataFields>
            <targetName displayName="Experiment Timestamp"/>
            <validValueList displayName="Tracker Tag" required="true">
                <validValue displayName="A" value="A"/>
                <validValue displayName="B" value="B"/>
                <validValue displayName="C" value="C"/>
                <validValue displayName="D" value="D"/>
                <validValue displayName="E" value="E"/>
            </validValueList>
            <text displayName="Worm Strain" required="true" pattern="[0-9A-Za-z\s]++"/>
            <text displayName="RNAI" required="true" pattern="[0-9A-Za-z\s]++"/>
            <validValueList displayName="Stimulus Protocol" required="true">
                <validValue displayName="A: Protocol A" value="A"/>
                <validValue displayName="B: Protocol B" value="B"/>
            </validValueList>
            <text displayName="Path" required="true" copyable="false">
                <sourceFileDefault pattern=".*[/\\\\]([^/\\\\]++)[/\\\\]\d\d\d\d\d\d\d\d_\d\d\d\d\d\d"
                                   matchType="path"/>
            </text>
            <text displayName="Notes" required="false" />
        </dataFields>

    </project>

</transmogrifierConfiguration>