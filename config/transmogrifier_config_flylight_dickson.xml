<?xml version="1.0"?>

<transmogrifierConfiguration xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                     xsi:noNamespaceSchemaLocation="transmogrifier_config.xsd">

    <global minimumVersion="3.0.7" frameSizePercentage="95"/>

    <project name="Fly Light: Dickson Images (BJD_*)" default="true">

        <inputFileSorter sortAlgorithm="LNumber" />

        <outputDirectory basePath="[\\dm11.janelia.priv|/groups/flylight]/flylight/dickson/confocalStacks"
                         derivedFromEarliestModifiedFile="true"/>

        <plugins>

            <rowValidator className="org.janelia.it.wip.WipDataPlugin">
                <property name="batchNameFieldName" value="Batch Name"/>
                <property name="batchNumberFieldName" value="Batch Number"/>
                <property name="batchColorFieldName" value="Batch Color"/>
            </rowValidator>

            <rowListener className="org.janelia.it.wip.WipDataPlugin">
                <property name="batchNameFieldName" value="Batch Name"/>
                <property name="batchNumberFieldName" value="Batch Number"/>
                <property name="batchColorFieldName" value="Batch Color"/>
            </rowListener>

            <rowListener className="org.janelia.it.ims.tmog.plugin.imagedb.ImageDataPlugin">
                <property name="db.config.key" value="sage"/>
                <property name="lab" value="$STATIC:dickson"/>
                <property name="family" value="$STATIC:dickson"/>
                <property name="imaging_project" value="$STATIC:broad_expression_patterns"/>
                <property name="effector" value="UAS Reporter"/>
                <property name="line" value="Line"/>
                <property name="created_by" value="Imager"/>
                <property name="renamed_by" value="Renamer"/>
                <property name="class" value="Class"/>
                <property name="ihc_batch" value="Batch Name"/>
                <property name="mounting_protocol" value="Tissue Mounting Protocol"/>
                <property name="tissue_orientation" value="Tissue Orientation"/>
                <property name="vt_id_found" value="VT Found"/>
                <property name="vt_library_match" value="VT Match"/>
            </rowListener>

        </plugins>

        <dataFields>

            <!-- lines should all start with BJD -->
            <webServiceList displayName="Line" required="true"
                            valueCreationPath="*/line"
                            relativeActualValuePath="name"
                            relativeValueDisplayNamePath="name"
                            serviceUrl="http://sage.int.janelia.org/sage-ws/lines/forMultipleLabs.janelia-sage?lab=dickson"
                            autoComplete="true">
            </webServiceList>

            <separator value="_00-"/>

            <validValueList displayName="Gender" required="true">
                <validValue displayName="m: Male" value="m"/>
                <validValue displayName="f: Female" value="f"/>
                <validValue displayName="x: Not Defined" value="x"/>
            </validValueList>

            <!-- always make Age 'A00' -->
            <separator value="A00"/>

            <validValueList displayName="Area" required="true">
                <validValue displayName="s: Salivary Gland" value="s"/>
                <validValue displayName="b: Brain" value="b"/>
                <validValue displayName="v: Ventral Nerve Cord" value="v"/>
            </validValueList>

            <separator value="_C"/>
            <fileModificationTime displayName="Capture Date" datePattern="yyMMdd" />
            <separator value="_"/>
            <runTime datePattern="yyyyMMddHHmmssSSS"/>
            <separator value=".lsm"/>

            <!--
             These values are collected for the SAGE database but are not
             included as components of the file name (markedForTask="false").
             -->
            <number displayName="Batch Number" required="true"
                    minimumValue="80" maximumValue="600"
                    markedForTask="false" />

            <validValueList displayName="Batch Color" required="true"
                            markedForTask="false">
                <validValue value="red"/>
                <validValue value="tan"/>
                <validValue value="purple"/>
                <validValue value="blue"/>
                <validValue value="white"/>
                <validValue value="pink"/>
                <validValue value="gray"/>
                <validValue value="green"/>
                <validValue value="yellow"/>
                <validValue value="orange"/>
            </validValueList>

            <pluginData displayName="Batch Name" markedForTask="false" />

            <validValueList displayName="Tissue Mounting Protocol" required="true"
                            markedForTask="false">
                <validValue value="Glycerol-Based Mounting" default="true"/>
                <validValue value="DPX Mounting"/>
            </validValueList>

            <cvTermList displayName="Tissue Orientation" required="true"
                        markedForTask="false"
                        serviceUrl="http://sage.int.janelia.org/sage-ws/cvs/tissue_orientation"
                        displayNamePrefixedForValues="false">
                <staticDefault value="face_up"/>
            </cvTermList>

            <validValueList displayName="UAS Reporter" required="true"
                            markedForTask="false">
                <validValue value="UAS_IVS-mCD8_3_0007" default="true"/>
                <validValue value="UAS_mCD8_2_0006"/>
                <validValue value="LexAop_IVS-myr_3_0008"/>
            </validValueList>

            <cvTermList displayName="Imager" required="true"
                        markedForTask="false"
                        autoComplete="true"
                        serviceUrl="http://sage.int.janelia.org/sage-ws/cvs/imager">
            </cvTermList>

            <cvTermList displayName="Renamer" required="true"
                        markedForTask="false"
                        autoComplete="true"
                        serviceUrl="http://sage.int.janelia.org/sage-ws/cvs/imager"
                        sharedForAllSessionFiles="true">
            </cvTermList>

            <validValueList displayName="Class" required="false"
                            markedForTask="false">
                <validValue displayName="Screening" value="Screening" default="true"/>
                <validValue displayName="Rework" value="Rework"/>
            </validValueList>

            <validValueList displayName="VT Found" required="true"
                            markedForTask="false">
                <validValue value="Y" default="true"/>
                <validValue value="N"/>
            </validValueList>

            <validValueList displayName="VT Match" required="true"
                            markedForTask="false">
                <validValue value="Y" default="true"/>
                <validValue value="N"/>
            </validValueList>

        </dataFields>

    </project>

</transmogrifierConfiguration>